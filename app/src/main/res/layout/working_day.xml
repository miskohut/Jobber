<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="10dp">

    <TextView
        android:id="@+id/work_started_label"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18sp"


        android:text="@string/work_started"/>

    <EditText
        android:id="@+id/work_started"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/work_ended_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/work_started"

        android:textSize="18sp"

        android:text="@string/work_ended"/>

    <EditText
        android:id="@+id/working_ended"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_below="@id/work_started"/>

</RelativeLayout>